---
import GlowingFrame from '../layouts/BaseLayout.astro';
import Clock from '../components/Clock.astro';
import Latitude from '../components/Latitude.astro';
import Longitude from '../components/Longitude.astro';
import HealthBar from '../components/HealthBar.astro';
import Speed from '../components/Speed.astro';
---

<GlowingFrame title="Omniversify">
<HealthBar/>
  <div class="flex flex-wrap justify-items-start items-center text-teal-300 font-bold">
    <div class="w-1/3 sm:w-1/4 md:w-1/6 lg:w-1/8 xl:w-1/10 h-6 self-start text-left pl-3  pt-2 text-sm">Unv: Primodial</div>
    <div class="w-1/3 sm:w-1/4 md:w-1/6 lg:w-1/8 xl:w-1/10 h-6 self-start text-left  pl-3 pt-2 text-sm">Glx: Milky Way</div>
    <div class="w-1/3 sm:w-1/4 md:w-1/6 lg:w-1/8 xl:w-1/10 h-6 self-start text-left  pl-3 pt-2 text-sm">Pln: Earth</div>
    <div class="w-1/3 sm:w-1/4 md:w-1/6 lg:w-1/8 xl:w-1/10 h-6 self-start text-left  pl-3 pt-2 text-sm"><Clock/></div>
    <div class="w-1/3 sm:w-1/4 md:w-1/6 lg:w-1/8 xl:w-1/10 h-6 self-start text-left  pl-3  pt-2 text-sm"><Longitude/></div>
    <div class="w-1/3 sm:w-1/4 md:w-1/6 lg:w-1/8 xl:w-1/10 h-6 self-start text-left  pl-3  pt-2 text-sm"><Latitude/></div>
    <div class="w-1/3 sm:w-1/4 md:w-1/6 lg:w-1/8 xl:w-1/10 h-6 self-start text-left  pl-3  pt-2 text-sm">Pwr: 69%</div>
    <div class="w-1/3 sm:w-1/4 md:w-1/6 lg:w-1/8 xl:w-1/10 h-6 self-start text-left  pl-3 pt-2 text-sm"><Speed/></div>
    
</div>
<canvas id="compass"></canvas>
</GlowingFrame>

