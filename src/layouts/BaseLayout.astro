---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      @keyframes glowPulse {
        0%, 100% { box-shadow: 0 0 5px #4fd1c5, 0 0 10px #4fd1c5, 0 0 15px #4fd1c5; }
        50% { box-shadow: 0 0 10px #4fd1c5, 0 0 15px #4fd1c5, 0 0 20px #4fd1c5; }
      }
    </style>
    
  </head>
  <body class="bg-black m-0 p-0 h-screen w-screen overflow-hidden">
    <div class="h-full w-full p-4 box-border">
      <div class="w-full h-full border-3 border-teal-400 rounded-2xl"
           style="animation: glowPulse 3s infinite;">
        <slot/>
      </div>
    </div>
  </body>
</html>