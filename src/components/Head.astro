---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width,  initial-scale=1.0, viewport-fit=cover"
    />
    <title>{title}</title>
    <style>
      
      body {
        display: flex;
        flex-direction: column;
        margin: 0;
        padding: 0;
        height: 100vh;
        width: 100%;
        overflow: auto;
      }
    </style>
    
  </head>
